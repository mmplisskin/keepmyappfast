

<% @users.each do |user| %>
<div class="row">

  <div class="col s6 m3">
    <%= user.name%>
  </div>

  <div class="col s6 m4 truncate">
    <%= user.email %>
  </div>

  <div class="col s6 m2">
    <%= user.uid %>
  </div>

  <div class="col m2 s6">
    <%= user.sites.count %> sites
  </div>

  <div class="col m1 offset-s10">
    <a href="/sites/<%= user.id %>" rel="nofollow" data-method="delete" class="btn-floating wave-effect waves-light btn-red tooltipped" data-position="top" data-delay="10" data-tooltip="Remove User"><i class="material-icons">delete</i></a>
  </div>


</div>


  <div class="section light blue-grey lighten-5">
    Sites:
  <% user.sites.each do |site| %>
  <div class="row">
  <div class="col m6 s8 offset-m2">
    <%= site.name %>
  </div>
  <div class="col m3 s3">
    <%= site.url %>
  </div>
  <div class="col m1 offset-s10">
    <a href="/sites/<%= site.id %>" rel="nofollow" data-method="delete" class="btn-floating wave-effect waves-light btn-red tooltipped" data-position="top" data-delay="10" data-tooltip="Remove Site"><i class="material-icons">delete</i></a>
  </div>
</div>
  <% end %>
</div>


<div class="divider"></div>

<% end %>
